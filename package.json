{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "---------------- NPM BINARY WRAPPERS ----------------": "",
    "npm-cli-login": "npm-cli-login",
    "---------------- LERNA ----------------": "",
    "compile": "lerna run compile",
    "release-it": "lerna run release-it",
    "release-it:debug": "lerna run release-it:debug",
    "bootstrap": "lerna bootstrap",
    "---------------- TESTING ----------------": "",
    "test": "nyc ./node_modules/.bin/_mocha 'packages/**/tests/**/*.tests.ts'",
    "---------------- CI ----------------": "",
    "test:ci": "yarn test && nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "ts-polyfill": "^3.5.3"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/chai": "^4.1.7",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "mocha": "^6.1.3",
    "mocha-typescript": "^1.1.17",
    "npm-cli-login": "^0.1.1",
    "nyc": "^14.0.0",
    "reflect-metadata": "^0.1.13",
    "release-it": "^12.4.3",
    "rollup": "^1.21.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rxjs": "^6.5.3",
    "shx": "^0.3.2",
    "sinon": "^7.5.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.13.1",
    "typemoq": "^2.1.0",
    "typescript": "^3.6.3",
    "typescript-tslint-plugin": "^0.5.0",
    "webpack-config-utils": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "packages/**/src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "packages/**/src/**/errors/**/*.ts",
      "packages/**/dist/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  }
}
