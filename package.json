{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=12.20.0 <=14.17.1",
    "yarn": ">=1.21.1 <2"
  },
  "scripts": {
    "---------------- NPM BINARY WRAPPERS ----------------": "",
    "nx": "nx",
    "---------------- COMMANDS ----------------": "",
    "build": "nx run-many --target=build --all",
    "release": "nx run-many --target=release --all",
    "---------------- TESTING ----------------": "",
    "test": "nx run-many --target=test --all",
    "test:coverage": "shx rm -rf ./coverage && yarn test --coverage && yarn merge-coverage && yarn report-coverage",
    "merge-coverage": "istanbul-merge --out ./coverage/coverage.json ./coverage/**/coverage-final.json",
    "report-coverage": "istanbul report --include ./coverage/coverage.json --dir ./coverage html text-summary",
    "---------------- CI ----------------": "",
    "test:ci": "yarn test --coverage && lcov-result-merger './coverage/packages/**/lcov.info' './coverage/lcov.info'",
    "---------------- LINT ----------------": "",
    "lint": "nx workspace-lint && nx lint",
    "---------------- UTILITY ----------------": "",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@abgov/nx-release": "^1.1.4",
    "@hirez_io/observer-spy": "^2.1.0",
    "@nrwl/cli": "12.5.7",
    "@nrwl/eslint-plugin-nx": "12.5.7",
    "@nrwl/jest": "12.5.7",
    "@nrwl/linter": "12.5.7",
    "@nrwl/node": "^12.5.7",
    "@nrwl/tao": "12.5.7",
    "@nrwl/workspace": "12.5.7",
    "@release-it/conventional-changelog": "^3.0.1",
    "@semantic-release/git": "^9.0.0",
    "@testdeck/jest": "^0.1.2",
    "@types/jest": "26.0.8",
    "@types/node": "14.14.33",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "barrelsby": "^2.2.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv": "8.2.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "istanbul": "^0.4.5",
    "istanbul-merge": "^1.1.1",
    "jest": "27.0.3",
    "lcov-result-merger": "^3.1.0",
    "prettier": "^2.3.1",
    "semantic-release": "^17.4.4",
    "shx": "^0.3.3",
    "ts-jest": "27.0.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
