{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.20.0 <=14.15.1",
    "yarn": ">=1.21.1 <2"
  },
  "scripts": {
    "---------------- NPM BINARY WRAPPERS ----------------": "",
    "lerna": "lerna",
    "---------------- LERNA ----------------": "",
    "compile": "lerna run compile",
    "bootstrap": "lerna bootstrap",
    "release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo --tag-format='${LERNA_PACKAGE_NAME}-v\\${version}'",
    "---------------- TESTING ----------------": "",
    "test": "nyc ./node_modules/.bin/_mocha 'packages/**/tests/**/*.tests.ts'",
    "---------------- CI ----------------": "",
    "test:ci": "yarn test && nyc report --reporter=lcov",
    "---------------- LINT ----------------": "",
    "lint": "eslint 'packages/**/src/**/*.ts'",
    "---------------- UTILITY ----------------": "",
    "modules:list": "find . -name \"node_modules\" -type d -prune -print | xargs du -chs",
    "modules:prune": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.0",
    "@semantic-release/git": "^7.0.18",
    "@types/chai": "^4.1.7",
    "@types/node": "^12.0.0",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "mocha": "^6.1.3",
    "mocha-typescript": "^1.1.17",
    "nyc": "^14.0.0",
    "rollup": "^1.21.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rxjs": "~6.5.5",
    "semantic-release": "15.9.x",
    "semantic-release-monorepo": "^6.1.1",
    "shx": "^0.3.2",
    "sinon": "^7.5.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "typemoq": "^2.1.0",
    "typescript": "~3.5.3",
    "webpack-config-utils": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "packages/**/src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "packages/**/src/**/errors/**/*.ts",
      "packages/**/dist/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "release": {
    "monorepo": {
      "analyzeCommits": {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "docs",
            "scope": "readme",
            "release": "patch"
          },
          {
            "type": "chore",
            "scope": "root",
            "release": "patch"
          }
        ]
      }
    },
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "verifyConditions": [
      "@semantic-release/git"
    ]
  }
}
